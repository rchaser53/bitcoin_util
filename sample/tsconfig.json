{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2015",
		"inlineSourceMap": true,
		"allowJs": true,
		"declaration": false,
		"removeComments": true,
		"noImplicitAny": false,
		"rootDir": "./ts",
		"outDir": "./js",
		"noLib": false,
		"experimentalDecorators": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noEmit": false,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["es2015", "es2016", "dom", "es2017.object"]
	},
	"compileOnSave": false,
	"include": ["./ts/**/*.ts"],
	"exclude": ["node_modules"]
}
